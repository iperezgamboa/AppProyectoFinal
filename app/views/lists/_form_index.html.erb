
<%= form_for(@list) do |f| %>
  <% if @list.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(list.errors.count, "error") %> prohibited this list from being saved:</h2>

      <ul>
        <% list.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<div class="card">
    <div class="card-body">
        <div class="field form-group ">        
            <% f.label :description %> <br/>
            <%= f.text_field :description, placeholder: "Write your task here" %>
            <%= f.submit "Add an Activity", class: "btn btn-info" %>
        </div>

        <div class="actions form-group">
           
            <%= link_to 'Delete activities finished', home_trashall_path, data: { confirm: 'Are you sure?'}, class: "btn btn-success"  %>
            <%= link_to 'Delete All your activities', home_trashthemall_path, data: { confirm: 'Are you sure?'}, class: "btn btn-success"  %>
        </div>
    <% end %>
 </div>
</div>
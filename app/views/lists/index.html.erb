<p id="notice"><%= notice %></p>

<div class="card">
  <div class="card-header">
<h1>Lists</h1>

<br>
  </div>
<div class="card-body">
    <table class="table table-striped table-bordered table-hover ">
      <thead class="table-dark">
    <tr>
      <th>To do Item</th>
      <th>State of the task Completed or not</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lists.each do |list| %>
      
      <% if list.completed %>
      <tr class ="table-warning">
        <td><%= list.description %></td>
        <td><%= list.completed %></td>
        <td><%= link_to 'Show', list %></td>
        <td><%= link_to 'Edit', edit_list_path(list) %></td>
        <td><%= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% else %>

      <tr>
        <td><%= list.description %></td>
        <td><%= list.completed %></td>
        <td><%= link_to 'Show', list %></td>
        <td><%= link_to 'Edit', edit_list_path(list) %></td>
        <td><%= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>

     <% end %>
    <% end %>
  
  </tbody>
</table>

<br>

<%= link_to 'Add to do item', new_list_path, class:'btn btn-info' %>

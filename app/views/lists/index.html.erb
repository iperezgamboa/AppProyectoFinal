


<div class="card">
  <div class="card-header">
<h1> My daily To do List</h1>

<br>
  </div>
<div class="card-body">
    <table class="table table-striped table-bordered table-hover ">
      <thead class="table-dark">
   
  </thead>

  <tbody>
    <% @lists.each do |list| %>
      
      <% if list.completed %>
      <tr class ="table-warning">
        <td class="striker"><%= link_to list.description, edit_list_path(list) %> <% list.description %></td>
        <td>
           
            <% link_to 'Show', list %>
            <% link_to 'Edit', edit_list_path(list) %>
            <%= link_to 'Delete', list, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
        </td>
      </tr>
      <% else %>

      <tr>
        <td><%= link_to list.description, edit_list_path(list) %><% list.description %></td>
        <td>             
            <% link_to 'Show', list %>
            <% link_to 'Edit', edit_list_path(list) %>
            <%= link_to 'Delete', list, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
        </td>
      </tr>

     <% end %>
    <% end %>
  
  </tbody>
</table>

<br>

<%= link_to 'Add to do item', new_list_path, class:'btn btn-info' %>

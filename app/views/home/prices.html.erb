<h1> Crypto currency value</h1>
<br>

<table class="table table-striped table-border table-hover">
  <thead class="table-dark">
    <tr>       
        <th scope="col">Name</th>
        <th scope="col">Price</th>
        <th scope="col">24hour High</th>
        <th scope="col">24hour low</th>
        <th scope="col">Mktcap</th>
    </tr>              
  </thead>
  <tbody>
  
<% @prices["DISPLAY"].each do |key,value| %> 
    </tr>
        <td><%= key %></td>
        <td><%= value["USD"]["PRICE"]%></td>
        <td><%= value["USD"]["HIGHDAY"]%></td>
        <td><%= value["USD"]["LOWDAY"]%></td>
        <td><%= value["USD"]["MKTCAP"]%></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br/>
<h1> Check the news </h1>
<br/>
<div class="container">
    <div class="row">
        <% for x in @news ["Data"] %>
        <div class="col-sm-4">
            <div class="card" style= "height: 750px; margin-bottom: 20px " >
              <img class="card-img-top" src="<%= x["imageurl"] %>" alt="<%= x["source"] %>">
              <div class="card-body">
                  <h5 class="card-title"><%= x["title"] %><br/></h5>
                  <p class="card-text"><%= x["body"] %></p>
                  <a href="<%= x["url"] %>" class="btn btn-primary"> Read more...</a>
              </div>
            </div>
        </div>
        <% end %>
        <br/>
    </div>
</div>





